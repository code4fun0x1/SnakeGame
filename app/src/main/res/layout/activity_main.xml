<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.ahdollars.gorganizer.snakegame.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:padding="3dp"
    android:orientation="vertical"
    android:background="#f5890e"
    android:layout_weight="70"
    android:weightSum="100">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="#fff"
    android:orientation="horizontal"
    android:layout_weight="7">
    <TextView
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:text="Score  "
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/score"
        android:textSize="20sp"
        android:textColor="#ff0559"
        android:text="3045"
        android:layout_height="wrap_content" />

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="93"
        android:id="@+id/game"
        />
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="100"
        android:padding="0dp"
        android:orientation="horizontal"
        android:layout_weight="30">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="#83b5e7"
                app:srcCompat="@drawable/ic_left"
                android:id="@+id/left"
                app:elevation="0dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="20"
            android:weightSum="100"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="20dp"
                    android:background="#f1667b"

                    android:layout_gravity="center|top"
                    app:srcCompat="@drawable/ic_up"
                    android:id="@+id/up"
                    app:elevation="0dp" />
                <ImageButton
                    android:padding="20dp"
                    android:background="#f1667b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_gravity="center|bottom"
                    app:srcCompat="@drawable/ic_down"
                    android:id="@+id/down"

                    app:elevation="0dp" />

                <ImageView
                    android:layout_width="60dp"
                    android:padding="5dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_launcher_new"
                    android:id="@+id/icon_pause" />
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="#83b5e7"
                app:srcCompat="@drawable/ic_right"
                android:id="@+id/right"
                app:elevation="0dp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
